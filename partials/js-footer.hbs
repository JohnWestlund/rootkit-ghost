  <!-- make search modal visible when clicking object with ID #search-open -->
  <script>
    $('#search-open').on('click', function(e) {
      e.preventDefault();
      $('#search-in').css('visibility', 'visible').focus();
      $('.search-modal').css('opacity', 100);
      $('.search-modal').addClass('visible');
    });
  </script>
  <!-- end search modal visible when clicking object with ID #search-open -->

  <!-- make search modal invisible when clicking object with class .close-button -->
  <script>
    $('.close-button').on('click', function(e) {
      e.preventDefault();
      $('#search-in').css('visibility', 'hidden');
      $('.search-modal').css('opacity', 0);
      $('.search-modal').removeClass('visible');
    });
  </script>
  <!-- end search modal invisible when clicking object with class .close-button -->

  <!-- make search modal invisible when clicking outside modal (ID #modal-outer) -->
  <script>
    $('#modal-outer').on('click', function(e) {
      if(e.target.id === 'modal-outer') {
        $('#search-in').css('visibility', 'hidden');
        $('.search-modal').css('opacity', 0);
        $('.search-modal').removeClass('visible');
      }
    });
  </script>
  <!-- end search modal invisible when clicking outside modal (ID #modal-outer) -->

  <!-- link GhostHunter js to #search-in, and format results -->
  <script>
    $('#search-in').ghostHunter({
      results: "#search-results ul",
      zeroResultsInfo     : false,
      onKeyUp             : true,
      info_template       : '<li class="info">Number of posts found: \{\{amount\}\}</li>',
      result_template     : "<li><a href=\"\{\{link\}\}\"><i class=\"fa fa-space-shuttle\"></i>\{\{title\}\}</a></li>",
    });
  </script>
  <!-- end link GhostHunter js to #search-in, and format results -->

  <!-- slicknav support -->
  <script>
    $(document).ready(function(){
      var postContent = $('.post-content');
      $('ul.nav').attr('id', 'menu');
      $('#menu').slicknav();
      if (postContent.length) {
        postContent.find('img').on('click', function () {
          var img = $(this).attr('src');
          blueimp.Gallery([img]);
        });
      }
    });
  </script>
  <!-- end slicknav support -->

